{{#each books}}
    <div class="book-box">
        <h3 class="book-name">{{this.title}}</h3>
            <div class="progress col-xs-8">
                 <div class="progress-bar" role="progressbar" aria-valuenow="70" 
                 aria-valuemin="0" aria-valuemax="100" style="width:70%">
                 <span>0 out of {{this.pages}} pages read!</span>
                 </div>
            </div>
            <button class="book-notes col-xs-2">Notes</button>
            <button class="book-timer col-xs-2">Timer</button>
        <br>
    </div>
{{/each}}