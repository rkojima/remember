<div class="timer-box">
    <form action="" class="input-group" method="POST" id="timer-setup">
        <div class="form-group">
            <label for="minutesToRead">How many minutes to read?</label>
            <input type="number" class="form-control" id="minutesToRead" name="minutes"  placeholder="1" required="" />
        </div>
        <div class="form-group">
            <label for="bookToRead">Which book to read?</label>
            <select name="book-to-read" id="bookToRead" class="form-control">
            {{#each books}}
                <option value="{{this.id}}">{{this.title}}</option>
            {{/each}}
            </select>
        </div>    
        <br></br>
        <button type="submit" class="btn btn-primary btn-block {{#if demo}}disabled{{/if}}">Let's Read!</button>
    </form>
</div>